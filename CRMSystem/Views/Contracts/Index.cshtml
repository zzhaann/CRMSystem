@model Dictionary<DateTime, List<CRMSystem.Models.Order>>

<div class="app-main-layout">
    <div class="app-main-layout-header">
        <div class="app-main-layout-wrapper header">
            <div class="page-heading"><h2>Контракты</h2></div>
        </div>
    </div>

    <div class="app-main-layout-wrapper">
        <div class="app-main-layout-content">
            <div class="page-tabs-content">
                <div class="section">
                    <div class="flex row w-row">
                        <div class="col w-col w-col-12">
                            <div class="card">

                                @foreach (var group in Model)
                                {
                                    <div class="mb-4">
                                        <h4 class="text-primary">
                                            @group.Key.ToString("dd.MM.yyyy") г.: Заказы
                                        </h4>
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Номер контракта</th>
                                                    <th>Цветы</th>
                                                    <th>Количество</th>
                                                    <th>Цена</th>
                                                    <th>Клиент</th>
                                                    <th>Телефон</th>
                                                    <th>Флорист</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var order in group.Value)
                                                {
                                                    <tr>
                                                        <td>@order.ContractNumber</td>
                                                        <td>@order.FlowerName</td>
                                                        <td>@order.Quantity</td>
                                                        <td>@order.Price</td>
                                                        <td>@(order.CustomerName ?? "Не указан")</td>
                                                        <td>@order.CustomerPhone</td>
                                                        <td>@order.Florist.FullName</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }

                                @if (!Model.Any())
                                {
                                    <p class="text-muted">Нет завершённых заказов.</p>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
